@model CarViewModel

@{
    ViewData["Title"] = "Create";
}
<style>
    *, *:before, *:after {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {

	/*Image only BG fallback*/

	/*background = gradient + image pattern combo*/


}

body {
  font-family: 'Nunito', sans-serif;
  color: #384047;
}

form {
  max-width: 300px;
  margin: 4% auto;
  padding: 10px 20px;
  background: #D3C8F5;
  border-radius: 8px;
}

h1 {
  margin: 0 0 5% 0;
  text-align: center;
}
h3 {
  margin: 2% 0 4% 0;
  text-align: center;
}
h4 {
  margin: 4% 0 2% 0;
  text-align: left;
}
input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
textarea,
select {
  background: rgba(255,255,255,0.1);
  border: none;
  font-size: 16px;
  height: auto;
  margin: 0;
  outline: 0;
  padding: 15px;
  width: 100%;
  background-color: #e8eeef;
  color: #160C32 ;
  box-shadow: 0 0 1px 1px rgba(22, 12, 50, 0.5) inset;
  margin-bottom: 3%;
}

    input[type="radio"],
    input[type="checkbox"] {
        margin-top: 2.5%;
        margin-left: 2.5%;
        transform: scale(2);
        opacity: 0.9;
        cursor: pointer;

    }
/*        input[type="checkbox"]:checked {
            background: radial-gradient(rgba(36, 20, 85, 1), rgba(22, 12, 50, 1));
        }*/
        input[type="radio"]:checked,
        input[type="checkbox"]:checked {
            transform: scale(2.5);
         
        }

select {
  padding: 6px;
  height: 32px;
  border-radius: 2px;
}

button {
  padding: 19px 39px 18px 39px;
  color: #FFF;
  background-color: #239B7D;
  font-size: 18px;
  text-align: center;
  font-style: normal;
  border-radius: 5px;
  width: 100%;
  border: 1px solid #331C78 ;
  border-width: 1px 1px 3px;
  box-shadow: 0 -1px 0 rgba(255,255,255,0.1) inset;
  margin-bottom: 5%;
}

fieldset {
  margin-bottom: 3%;
  border: none;
}

legend {
  font-size: 1.4em;
  margin-bottom: 4%;
}

label {
  display: block;
  margin-bottom: 2%;
}

label.light {
  font-weight: 300;
  display: inline;
}

.number {
  background-color: #239B7D;
  color: #fff;
  height: 30px;
  width: 30px;
  display: inline-block;
  font-size: 0.8em;
  margin-right: 4px;
  line-height: 30px;
  text-align: center;
  text-shadow: 0 1px 0 rgba(255,255,255,0.2);
  border-radius: 100%;
}

  form {
    max-width: 480px;
  }

    label {
        font-size: 20px;
        margin-left: 4%;
        font-weight: 200;
    }

</style>

