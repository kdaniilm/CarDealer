<style>




    .outer {
        margin: 20px auto;
        position: relative;
        background-color: rgba(30,30,30,0.2);
        height: 250px;
        width: 450px;
        overflow: hidden;
        display: flex;
        align-items: center;
        border-radius: 20px;
    }

    img {
        position: absolute;
        top: 0px;
        right: -20px;
        z-index: 0;
        animation-delay: 0.5s;
    }

    .content {
        animation-delay: 0.3s;
        position: absolute;
        left: 20px;
        z-index: 3
    }

    h1 {
        color: #111;
        margin-top: 5%
    }

    p {
        width: 280px;
        font-size: 13px;
        line-height: 1.4;
        color: rgba(22, 12, 50, 0.5);
        margin: 20px 0;
    }

    .bg {
        display: inline-block;
        color: #fff;
        background: #239B7D;
        padding: 5px 10px;
        border-radius: 50px;
        font-size: .7em;
    }

    .button {
        width: fit-content;
        height: fit-content;
        margin-top: 10px;
        margin-left: 50px;
    }

        .button a {
            display: inline-block;
            overflow: hidden;
            position: relative;
            font-size: 11px;
            color: #331C78;
            text-decoration: none;
            padding: 10px 15px;
            border: 1px solid rgba(22, 12, 50, 0.5);
            font-weight: bold;
        }

            .button a:after {
                content: "";
                position: absolute;
                top: 0;
                right: -10px;
                width: 0%;
                background: #239B7D;
                height: 100%;
                z-index: -1;
                transition: width 0.3s ease-in-out;
                transform: skew(-25deg);
                transform-origin: right;
            }

            .button a:hover:after {
                width: 150%;
                left: -10px;
                transform-origin: left;
            }

            .button a:hover {
                color: #fff;
                transition: all 0.5s ease;
            }


            .button a:nth-of-type(1) {
                border-radius: 50px 0 0 50px;
                border-right: none;
            }

            .button a:nth-of-type(2) {
                border-radius: 0px 50px 50px 0;
            }

    .cart-icon {
        padding-right: 8px;
    }
</style>

